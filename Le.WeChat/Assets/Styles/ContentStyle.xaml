<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:Le.WeChat.Common.Converter;assembly=Le.WeChat.Common">
    <!-- 全局的 BooleanToVisibilityConverter -->
    <Style x:Key="BaseContent" TargetType="TextBlock">
        <Setter Property="Padding" Value="8" />
        <Setter Property="MaxWidth" Value="350" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <Style x:Key="RightContent" TargetType="TextBlock" BasedOn="{StaticResource BaseContent}">
        <Setter Property="Background" Value="#FFFFFF" />
    </Style>
    
    <Style x:Key="LeftContent" TargetType="TextBlock" BasedOn="{StaticResource BaseContent}">
        <Setter Property="Background" Value="#89D961" />
    </Style>

</ResourceDictionary>